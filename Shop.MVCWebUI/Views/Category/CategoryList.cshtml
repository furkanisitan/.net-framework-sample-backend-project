@model Shop.MVCWebUI.Models.CategoryListViewModel

<div class="list-group" id="category-list">

    @{
        if (Model.DefaultActiveCategory != null)
        {
            <a href="javascript:void(0)" class="list-group-item list-group-item-action active" id="@Model.DefaultActiveCategory.Id">@Model.DefaultActiveCategory.Name</a>
        }
        foreach (var category in Model.Categories)
        {
            <a href="javascript:void(0)" class="list-group-item list-group-item-action" id="@category.Id">@category.Name</a>
        }
    }

</div>