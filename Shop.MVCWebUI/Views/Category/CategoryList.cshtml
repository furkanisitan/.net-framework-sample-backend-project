@model Shop.MVCWebUI.Models.CategoryListViewModel

<div class="list-group">

    @{
        if (Model.DefaultActiveCategory != null)
        {
            <a href="#" class="list-group-item list-group-item-action active" id="@Model.DefaultActiveCategory.Id">@Model.DefaultActiveCategory.Name</a>
        }
        foreach (var category in Model.Categories)
        {
            <a href="#" class="list-group-item list-group-item-action" id="@category.Id">@category.Name</a>
        }

    }

</div>